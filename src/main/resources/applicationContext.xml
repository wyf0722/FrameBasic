<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context.xsd
        ">
    <!--1.导入spring的坐标spring-context-->
    <context:property-placeholder location="classpath*:*.properties"/>

    <!--注解开发-->
<!--    <context:component-scan base-package="com.fan.dao.impl"/>-->

    <!--2.配置bean-->
    <!--bean标签配置bean
    id -> 命名
    class -> 定义类型-->
    <bean id="bookDao" name="dao" class="com.fan.dao.impl.BookDaoImpl" init-method="init" destroy-method="destroy" lazy-init="true">
        <!--构造器注入优先级更高-->
<!--        <constructor-arg name="connectionNum" value="20"/>-->
<!--        <constructor-arg name="databaseName" value="${jdbc.driver}"/>-->
        <property name="connectionNum" value="10"/>
        <!--        <property name="databaseName"  value="mysql"/>-->
        <property name="array">
            <array>
                <value>100</value>
                <value>200</value>
                <value>300</value>
            </array>
        </property>
        <property name="list">
            <list>
                <value>wu</value>
                <value>yi</value>
                <value>fan</value>
            </list>
        </property>
        <property name="set">
            <set>
                <value>wu</value>
                <value>wu</value>
                <value>yi</value>
                <value>fan</value>
            </set>
        </property>
        <property name="map">
            <map>
                <entry key="age" value="24"/>
                <entry key="name" value="wuyifan"/>
                <entry key="hometown" value="zhenjiang"/>
            </map>
        </property>
        <property name="properties">
            <props>
                <prop key="country">china</prop>
                <prop key="gender">male</prop>
            </props>
        </property>
    </bean>

    <bean id="userDao" class="com.fan.dao.impl.UserDaoImpl" lazy-init="true"/>
    <!--换成围堵标签-->
    <!--    <bean id="bookService" class="com.fan.service.impl.BookServiceImpl"/>-->
    <!--scope设置单例模式-->
