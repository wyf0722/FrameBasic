    <!--    </bean>-->
    <!--自动装配-->
    <bean id="bookService" class="com.fan.service.impl.BookServiceImpl" autowire="byType" lazy-init="true"/>
    <!--以上使用构造方法实例化bean  此处使用静态工厂实例化bean-->
